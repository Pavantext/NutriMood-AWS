# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_DEFAULT_REGION=us-east-1

# Aurora PostgreSQL Database Configuration
DB_HOST=your-aurora-endpoint.cluster-xxxxx.region.rds.amazonaws.com
DB_NAME=nutrimood
DB_USER=postgres
DB_PASSWORD=your-secure-password-here
DB_PORT=5432

# Pinecone Configuration (Vector Search)
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_INDEX_NAME=niloufer-aws-test
PINECONE_BOM_INDEX_NAME=niloufer-bom  # Separate index for user-uploaded BOM items
PINECONE_ENVIRONMENT=us-east-1

# AWS Bedrock Configuration (for NutriMood Chatbot)
# For regions like ap-south-1, you may need to use an inference profile ID instead of direct model ID
# Get the inference profile ID/ARN from AWS Bedrock Console > Cross-Region Inference
# If BEDROCK_INFERENCE_PROFILE_ID is set, it will be used instead of BEDROCK_MODEL_ID
BEDROCK_INFERENCE_PROFILE_ID=
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_MAX_TOKENS=1000
BEDROCK_TEMPERATURE=0.7
BEDROCK_TOP_P=0.9
BEDROCK_RPM_LIMIT=50

# AWS Titan Embeddings Configuration
TITAN_EMBEDDING_MODEL=amazon.titan-embed-text-v2:0
TITAN_EMBEDDING_DIMENSIONS=1024
TITAN_NORMALIZE=true

# NutriMood Chatbot Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=info

# Admin Panel Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
SECRET_KEY=aiqzhbmNdsZPL0hfALobeEf8prbUATpGvwIcmHhRkdY

# Food Data Configuration
# Path to Niloufer food data JSON file
FOOD_DATA_PATH=../data/raw/Niloufer_data.json

# Session Management Configuration
SESSION_MAX_HISTORY=50
SESSION_CLEANUP_HOURS=24

# MCP Server Configuration
MCP_SERVER_NAME=nutrimood-food-mcp
MCP_SERVER_VERSION=1.0.0
MCP_PROTOCOL_VERSION=2024-01-01
MCP_SERVER_URL=http://localhost:8001
